<h1>New User</h1>

<%= simple_form_for [@organization, @user] do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.association :client_apps, :as => :check_boxes, :collection => @user.organization.client_apps %>
  <div class="actions">
    <%= f.button :submit, :class => 'primary' %>
    <%= button_tag 'Reset', :type => :reset, :class => "btn" %>
  </div>
<% end %>

<%= link_to "Back", :back %>