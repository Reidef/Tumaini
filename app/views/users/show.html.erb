<h1>Profile</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Authorized Applications:</strong>
  <%= @user.client_apps.map{ |app| link_to( app.name, app.app_url) }.join(', ').html_safe %>
</p>

<nav>
  <%= link_to "All Users", users_path %>
  <%= link_to "Edit", edit_user_path(@user) if can? :edit, @user %>
  <%= link_to "Delete User", @user, :method => :delete, :confirm => "Are you sure you want to delete this user?" if can? :delete, @user %>
</nav>